---
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html transition:animate="none">
<html lang="en"

x-data="{darkMode: localStorage.getItem('darkMode')}"

x-init="$watch('darkMode', val => localStorage.setItem('darkMode', val))"

x-bind:data-theme="darkMode">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/test3.png" />		
		<meta name="generator" content={Astro.generator} />
        
		<title>{title} | Yan</title>
	<ViewTransitions/>
	</head>
	<body class="dark:bg-[#18181B] dark:text-slate-200 text-[#18181B]">
		<slot />
	</body>
</html>

<style is:global>
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Register your custom font family and tell the browser where to find it. */
@font-face {
    font-family: 'PlaypenSans';
    src: url('../../public/fonts/PlaypenSans-Bold.woff2') format('woff2');
    font-weight: bolder;
}
@font-face {
    font-family: 'PlaypenSans';
    src: url('../../public/fonts/PlaypenSans-Medium.woff2') format('woff2');
    font-weight: 400;
}

#cursor {
        animation: blink 1s linear infinite;
      }

      @keyframes blink {
        0% {
          opacity: 100%;
        }
        50% {
          opacity: 0%;
        }
      }

body{
    font-family: 'PlaypenSans', cursive;
}

.toggleNavbar{
    @apply md:static md:h-fit md:w-fit
        md:border-0 fixed justify-center 
        top-11 z-10
        dark:bg-[#18181B] bg-white h-full md:bg-inherit 
}

.card{
    @apply border-[3px] border-black bg-white
}


.navbar{
    @apply flex justify-between md:px-20 lg:px-72 py-2 md:py-0 px-2 
    border-b-[1px] dark:border-white border-black w-full font-bold
}

.logo-nav{
    @apply flex items-center text-xl 
}

.box-shadow-1{
    box-shadow: 6px 6px;
}
.box-shadow-2{
    box-shadow: 3px 3px;
}
.right-icon{
    @apply text-lg md:text-2xl text-center
}
</style>