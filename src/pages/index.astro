---
import Navbar from "../components/Navbar.astro";
import TypeWriting from "../components/TypeWriting.astro";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
const title = "Home";
---

<Layout title={title}>
	<Navbar position="fixed"  title={title}></Navbar>
	<main class="flex items-center main">
		<div class=" h-dvh flex flex-col w-full justify-center">
			<div class="">
				<TypeWriting/>
			</div>
			<div class="py-5">
				<h1 class="text-[28px] md:text-5xl font-extrabold">Hello Beautiful people</h1>
			</div>
			<div class="text-xs w-[75%] md:w-1/2 pb-5">
				<p class="leading-relaxed">
					<span class="mr-1 px-[2px] rounded-sm bg-red-600" :style="{'background-color': color}"></span>
					I'm just a normal guy.<br> I'm a big fan of 
					<span>
						Tailwind
					</span>
				</p>
			</div>
			<div class="flex gap-5 items-center">
				<a href="https://github.com/m-abyan" class="text-sm flex items-center gap-1 underline-theme w-fit decoration-2"
				:style="{ 'text-decoration-color': color }">
					<Icon name="social/github"/>
				</a>
				<a href="https://www.instagram.com/abyanriyadh" class="text-sm flex items-center underline-theme w-fit gap-1 decoration-2" 
				:style="{ 'text-decoration-color': color }">
					<Icon name="social/instagram"/>
				</a>
			</div>
	</main>
</Layout>