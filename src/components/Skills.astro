---
import { Icon } from "astro-icon/components";
import Skill from "./Skill.astro";
---
<!-- astro -->
<Skill href="#" text="Astro" classGrid="col-span-2" pClass="border-l-[3px]">
    <Icon name="skills/astro" class="icon"></Icon>
</Skill>

<!-- html -->
<Skill href="#" text="HTML" classGrid="row-start-2" pClass="border-l-[3px]">
    <Icon name="skills/html" class="icon"></Icon>
</Skill>

<!-- Laravel -->
<Skill href="#" text="Laravel" 
classGrid="row-start-2 absolute right-[-25px] md:right-[-31px] top-[90px] flex-col  shadow-[2px_2px]" >
    <Icon name="skills/laravel" 
    class="icon border-b-[3px] py-[2px] border-black w-full"></Icon>
</Skill>

<!-- php -->
<Skill href="#" text="PHP" classGrid="row-start-3" pClass="border-l-[3px]">
    <Icon name="skills/php" class="icon"></Icon>
</Skill>

<!-- Css -->
<Skill href="#" 
text="CSS" 
classGrid="w-[60%] row-start-3 col-start-3 flex-col ">
    <Icon name="skills/css" class="icon w-full py-[2px] border-b-[3px] border-black"></Icon>
</Skill>

<!-- Tailwind -->
<Skill href="#" text="Tailwind" classGrid="row-start-2 row-span-2 col-end-3 flex-col ">
    <Icon name="skills/tailwind" class="icon border-b-[3px] border-black w-full"></Icon>
</Skill>

<!-- JS -->
<Skill href="#" text="JS" 
classGrid=" row-span-2 w-[60%] flex-col-reverse" pClass="border-b-[3px]  border-black">
    <Icon name="skills/javascript" class="icon py-1">
    </Icon>
</Skill>

<style>
    .icon{
        @apply text-3xl mx-1
    }
</style>