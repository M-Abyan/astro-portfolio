---
interface props {
    position: string;
}
import { Icon } from "astro-icon/components";
const { position } = Astro.props;
---

<div class:list={["navbar", position]}>
    <div class="logo-nav border-nav w-fit">
        Yan
    </div>
    <div class="p-[6px] justify-self-end z-50" x-data="{ isShow: false }">
        <button class="md:hidden flex items-center h-full" x-on:click="isShow = !isShow">
            <Icon name="bar" class="text-xl"/>
        </button>
        <div class="w-[30%] bg-emerald-500 toggleNavbar gap-4 right-[-100%] 
        transition-all duration-150 z-10" 
            x-bind:class="{'right-[-1px]': isShow, 'right-[-100%]': !isShow}"
        >
            <div class="grid grid-cols-2 md:flex-row gap-4 p-2 text-[12px] md:flex">
                <a href="/">Home</a>
                <button class="self-center justify-self-center" 
                x-on:click="isShow = !isShow"
                x-bind:class="{'hidden': !isShow}"
                >X</button>
                <a href="projects">Projects</a>
                <a href="blogs">Blogs</a>
            </div>
        </div>
    </div>
</div>

