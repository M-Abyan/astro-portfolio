---
interface props {
    position: string;
}
import DarkMode from "../components/DarkMode.astro";

const { position,margin,title } = Astro.props;
---

<div class:list={["navbar pt-10", position]}>
    <div class:list={["flex max-w-xl justify-between md:mx-auto", margin]}>
    <div class="logo-nav w-fit">
        <div>
            Yan
            <span class=""> | </span>
            <span class="text-xs">{title}</span>
        </div>
    </div>
    <div class="flex items-center md:gap-10 gap-5" x-data="{ isShow: false }">
        <div class="md:order-last">
            <DarkMode></DarkMode>   
        </div>
        <div class="md:hidden flex flex-col gap-1 items-center w-full" 
        x-on:click="isShow = !isShow">
            <span class="dark:bg-slate-200 bg-[#18181B] w-[25px] h-[3px]  transition-all origin-bottom-right" 
            x-bind:class="{'rotate-[-30deg]': isShow}"></span>
            <span class="dark:bg-slate-200 bg-[#18181B] w-5 h-[2px] transition-all"
            x-bind:class="{'w-[0px]': isShow}"></span>
            <span class="dark:bg-slate-200 bg-[#18181B] w-[25px] h-[3px] transition-all origin-bottom-right"
            x-bind:class="{'rotate-[30deg]': isShow}"></span>
        </div>
        <div class="toggleNavbar gap-4 top-[-100%] 
        transition-all duration-150" 
            x-bind:class="{'right-[-1px]': isShow, 'right-[-100%]': !isShow}"
        >
            <div class="flex md:text-xs flex-col h-full justify-center gap-5 items-center md:flex-row p-2 text-[12px]">
                <a href="/" class="group">
                    <span 
                    class="bg-left-bottom bg-gradient-to-r from-sky-500 to-sky-500 
                    bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px]
                    transition-all duration-300 ">Home</span>
                </a>
                <a href="/projects"  class="group">
                    <span 
                    class="bg-left-bottom bg-gradient-to-r from-sky-500 to-sky-500 
                    bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px]
                    transition-all duration-300 ">Projects</span>
                </a>
                <a href="/blogs/"  class="group">
                    <span 
                    class="bg-left-bottom bg-gradient-to-r from-sky-500 to-sky-500 
                    bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px]
                    transition-all duration-300 ">
                        Blogs
                    </span>
                </a>

            </div>
        </div>
    </div>
</div>
</div>

