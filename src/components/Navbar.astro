    ---
interface props {
    position: string;
}
import DarkMode from "../components/DarkMode.astro";
import Theme from "../components/Theme.astro";

const { position,margin,title } = Astro.props;
---

<div class:list={["navbar pt-10", position]}>
    <div class:list={"flex max-w-xl justify-between md:mx-auto mx-8"}>
    <div class="logo-nav w-fit">
        <div>
            <span>Yan</span>
        </div>
    </div>
    <div class="flex items-center md:gap-10 gap-3" x-data="{ isShow: false }">
        <div class="md:order-last flex items-center gap-3">
            <Theme />
            <DarkMode />
        </div>
        <div class="md:hidden flex flex-col gap-1 items-center w-full z-40" 
        x-on:click="isShow = !isShow" >
            <span class="dark:bg-slate-200 bg-[#18181B] w-[25px] h-[3px]  transition-all origin-bottom-right" 
            x-bind:class="{'rotate-[-30deg]': isShow}"></span>
            <span class="dark:bg-slate-200 bg-[#18181B] w-5 h-[2px] transition-all"
            x-bind:class="{'w-[0px]': isShow}"></span>
            <span class="dark:bg-slate-200 bg-[#18181B] w-[25px] h-[3px] transition-all origin-bottom-right"
            x-bind:class="{'rotate-[30deg]': isShow}"></span>
        </div>
        <div class="toggleNavbar gap-4 top-[-100%] 
        transition-all duration-150" 
            x-bind:class="{'right-[-1px]': isShow, 'right-[-100%]': !isShow}">
            <div class="flex md:text-xs flex-col h-full justify-center gap-5 items-center md:flex-row p-2 md:text-[12px] text-xl">
                <a href="/" class=`group relative`>
                    <span>Home</span>
                    <span class="hover-underline-animation" 
                    :style="{ 'background-color': color }"></span>
                </a>
                <a href="/projects" class=`group relative`>
                    <span>Projects</span>
                    <span class="hover-underline-animation"
                    :style="{ 'background-color': color }"></span>
                </a>
                <a href="/blogs/" class=`group relative`>
                    <span>Blogs</span>
                    <span class="hover-underline-animation"
                    :style="{ 'background-color': color }"></span>
                </a>
            </div>
            
        </div>
    </div>
</div>
</div>