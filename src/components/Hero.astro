---
import { Icon } from "astro-icon/components";
---
<div class="card grid grid-cols-6 items-center relative box-shadow-2 rounded-sm ">
    <!-- hey -->
    <div class="container-hey
    rounded-sm">
    <span class="px-1 py-2 
    md:py-4 mr-1 bg-emerald-400 border-x-[3px] border-black">
        Hey!
    </span>
    I'm Abyan
    </div>
    <!-- ghost-->
    <div class="ghost w-[20%] md:w-[10%] flex justify-center">
        <Icon name="ghost" class="text-2xl md:text-3xl text-white"></Icon>
    </div>
    <!--arrow-->
    <div class="arrow">
        <Icon name="arrow" class="text-4xl"></Icon>
    </div>
    <!-- falling star -->
    <!-- <div class="falling-star">
        <Icon name="fallingstar" class="text-4xl"></Icon>
    </div> -->
    <!-- welcome -->
    <div class="welcome">
        Welcome
    </div>
    <!-- made with love -->
    <div class="mini-text indent-0 grid grid-rows-2 col-span-2 md:col-span-1">
        <div class="bg-sky-300 "></div>
        <div class="bg-orange-300 border-t-[3px] border-black"></div>
    </div>
</div>

<style>
    .welcome{
        @apply py-10   text-3xl md:text-7xl
        xl:text-8xl 2xl:text-9xl font-semibold w-full col-span-4 md:col-span-5
    }
    .mini-text{
        @apply  font-extrabold 
    text-[8px] leading-loose md:text-[12px] underline decoration-1 h-full 
    border-l-[3px] border-black 
    }
</style>